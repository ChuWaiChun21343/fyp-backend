<!DOCTYPE html>

<html>

<style>
    .inner {
        position: absolute;
        width: 50%;
        left: 50%;
        top: 40%;
        transform: translate(-50%, -50%);
    }
</style>

<head>
    <link type="text/css" href="./boostrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="./boostrap/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class=" bg-light">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #363740">
        <a class="navbar-brand" href="#" style="color: white;">Cityu Fyp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <div class="container-fluid">

        <form class="inner border needs-validation" action="/" method="POST" onsubmit="submitLoading()">
            <div class="m-3">
                <div class="mb-3 ">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" placeholder="Enter Account"
                        name="user[username]" value="<%=username%>" aria-describedby="validationServerUsername">
                    <div id="validationServerUsername" class="invalid-feedback">
                        Username cannot be empty
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" placeholder="Enter Password"
                        name="user[password]" value="<%=password%>" aria-describedby="validationServerUsername">
                    <div id="validationServerPassword" class="invalid-feedback">
                        Password cannot be empty
                    </div>
                </div>
                <button id="btn-loading" class="btn btn-primary" type="submit">
                    <span id="btn-loading-animation" role="status" aria-hidden="true"></span>
                    <span id="txt-loading">submit</span>
                </button>
                <% if (errorMessage) { %>
                    <div class="mt-2">
                        <span class="error text-danger">
                            <%= errorMessage %>
                        </span>
                    </div>
                    <% } %>
            </div>
        </form>
        <div class="modal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Modal body text goes here.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

<script>
    function submitLoading() {
        let userNamePassword = true;
        let passwordPassword = true;
        if (document.getElementById("username").value == "") {
            document.getElementById("username").classList.add('is-invalid');
            userNamePassword = false;
        }
        if (document.getElementById("password").value == "") {
            document.getElementById("password").classList.add('is-invalid');
            passwordPassword = false;
        }
        if (!userNamePassword || !passwordPassword) {
            event.preventDefault();
            return false;
        }
        document.getElementById('btn-loading').disable = true;
        document.getElementById('btn-loading-animation').className = "spinner-border spinner-border-sm";
        document.getElementById('txt-loading').innerHTML = "loading...";
        return true;
    }
</script>

</html>